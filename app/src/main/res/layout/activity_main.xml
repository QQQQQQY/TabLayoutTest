<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.example.com.tablayouttest.tabLayout.TabLayout
        android:id="@+id/analytical_product_formula_tl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        app:tabGravity="fill"
        app:tabIndicatorColor="#f66c9a"
        app:tabIndicatorHeight="2dp"
        app:tabMaxWidth="0dp"
        app:tabSelectedTextColor="#d85681"
        app:tabTextColor="#666666"
        app:tabUnderLineWidthEqualTitle="true" />

    <android.support.v4.view.ViewPager
        android:id="@+id/analytical_product_formula_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>